{{#if isValid}}
<div>
    {{#each payload}}
    <div>
        <p>Nombre: {{this.product_name}}</p>
        <p>Descripcion: {{this.product_description}}</p>
        <p>Precio: {{product_price}}</p>
        <p>Categoria: {{this.product_category}}</p>
    </div>
    <button id="btnComprar" value={{this._id}}>Agregar al Carrito</button>
    <br/>
    {{/each}}
</div>
<br/>
<br/>
<br/>
<div>
    {{#if hasPrevPage}}
        <a href={{this.prevLink}}><< Anterior</a>
    {{/if}}
    &nbsp;
    {{this.page}}
    &nbsp;
     {{#if hasNextPage}}
        <a href={{this.nextLink}}>Siguiente >></a>
    {{/if}} 
</div>
{{else}}
<h1>No hay productos para mostrar</h1>
{{/if}}